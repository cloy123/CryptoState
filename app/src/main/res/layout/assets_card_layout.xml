<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/darker_gray"
    android:layout_margin="4dp">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/visible_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/asset"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="@dimen/big_text"
                app:layout_constraintBottom_toTopOf="@id/symbol"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="BTC" />

            <androidx.legacy.widget.Space
                android:id="@+id/space"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/asset"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mainQuantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:textAlignment="textEnd"
                android:textSize="@dimen/big_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/space"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="0.0013" />

            <TextView
                android:id="@+id/symbol"
                tools:text="BTC/USD"
                android:textSize="@dimen/small_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/asset"
                app:layout_constraintStart_toStartOf="@id/asset"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/hidden_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp">

                <TextView
                    style="@style/card_layout_textViews"
                    android:text="@string/rub"/>

                <TextView
                    android:id="@+id/quantity_rub"
                    style="@style/card_layout_textViews"
                    tools:text="655565465464564.6545" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp">

                <TextView
                    style="@style/card_layout_textViews"
                    android:text="@string/usd" />

                <TextView
                    android:id="@+id/quantity_usd"
                    style="@style/card_layout_textViews"
                    tools:text="655565465464564.6545" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp">

                <TextView
                    style="@style/card_layout_textViews"
                    android:text="@string/eur" />

                <TextView
                    android:id="@+id/quantity_eur"
                    style="@style/card_layout_textViews"
                    tools:text="65556564.6545" />

            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp">

                <TextView
                    style="@style/card_layout_textViews"
                    android:text="@string/uah" />

                <TextView
                    android:id="@+id/quantity_uah"
                    style="@style/card_layout_textViews"
                    tools:text="6555664.6545" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp">

                <TextView
                    android:text="@string/average_price"
                    style="@style/card_layout_textViews"/>

                <TextView
                    android:id="@+id/averagePrice"
                    style="@style/card_layout_textViews"
                    tools:text="45000" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp">

                <TextView
                    android:text="@string/change"
                    style="@style/card_layout_textViews"/>

                <TextView
                    android:id="@+id/change"
                    style="@style/card_layout_textViews"
                    tools:text="45000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp">

                <TextView
                    android:id="@+id/edit"
                    style="@style/card_layout_textViews_buttons"
                    android:text="@string/edit" />

                <TextView
                    android:id="@+id/delete"
                    style="@style/card_layout_textViews_buttons"
                    android:text="@string/delete" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>